<div class="row">
  <div class="col-md-6">
    <% @items.each do |item| %>
      <p><%= item.title %> | <%= number_to_currency(item.price/100) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item), class: 'btn btn-primary' %></p>
    <% end %>
  </div>
  <div class="col-md-6">
    <ul>
      <% @categories.each do |category| %>
        <li><%= link_to category.title, category_path(category) %>
      <% end %></li>
    </ul>
  </div>
</div>