<h1>Flatiron Store</h1>

<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %> /
<% end %>

<% @items.each do |item| %>
  <p><%= item.title %> | <%= number_to_currency(item.price_convert) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
<% end %>
