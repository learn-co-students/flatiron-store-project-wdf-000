<% if current_user && current_user.current_cart %>
<%= link_to "Cart", cart_path(current_user.current_cart) %>
<%end%>

<% @categories.each do |category| %>
  <li><%= link_to category.title, category_path(category) %></li>
<% end %>

<% @items.each do |item| %>
  <p><%= item.title if item.inventory != 0 %> | <%= number_to_currency(item.price.to_f/100) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
<% end %>
