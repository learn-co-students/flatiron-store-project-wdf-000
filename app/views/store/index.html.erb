<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %> <br>
<% end %>

<% @items.each do |item| %>
  <% if item.inventory > 0 %>
  <p><%= item.title %> | <%= number_to_currency(item.price / 100.00) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
  <% end %>
<% end %>

<% if @user && @user.current_cart %>
<%= link_to 'Cart', cart_path(@user.current_cart) %>
<% end %>
