<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
    <li><%= link_to item.title, item_path(item) %><br>
        <%= "$#{item.price.to_f/100}" %><br>
        <% if @user %>
          <%= form_tag line_items_path(item_id: item) do %>
          <%= submit_tag "Add to Cart" %>
          <% end %>
        <% end %></li>
<% end %>
</ul>
