<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
  <li><%= link_to item.title, item_path(item) %></li>
  <strong> <%= "$#{item.price.to_f/100}" %> </strong> 
  <% if current_user %>
  <%= button_to "Add to Cart", edit_cart_path, method: :post %>
  <% end %>
<% end %>
</ul>

