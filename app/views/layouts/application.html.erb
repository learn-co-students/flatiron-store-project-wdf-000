<!DOCTYPE html>
<html>
<head>
  <title>RailsFlatironStore</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body>

<%= render 'layouts/messages'%>
<%= render 'layouts/header' %>
<%= yield %>
<%= link_to("Sign out", destroy_user_session_path, method: :delete) if current_user %>
<%= link_to("sign in", new_user_session_path) if current_user.nil? %>
<%= link_to("Sign up", new_user_registration_path) if current_user.nil? %>
</body>
</html>
